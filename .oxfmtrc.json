{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 180,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "none",
  "endOfLine": "lf",
  "ignorePatterns": ["package-lock.json", "pnpm-lock.yaml", "yarn.lock", "bun.lock", "bun.lockb", "/static/", "**/components/ui"],
  "overrides": [
    {
      "files": ["data_arsenal/**/*.json", "data_loadouts/**/*.json", "all_classnames_2024-02-28/**/*.json", "archive_arsenal/**/*.json", "archive_loadouts/**/*.json"],
      "options": {
        "printWidth": 1
      }
    }
  ]
}